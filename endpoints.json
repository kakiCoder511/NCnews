{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles withcomment count || sort by created_at in descending order",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
   },
  "GET /api/articles/:article_id":{
   "description":"serves a single article object by article_id",
  "exampleResponse": {
    "article": {
      "article_id": 1,
      "title": "Seafood substitutions are increasing",
      "topic": "cooking",
      "author": "weegembump",
      "body": "Text content here...",
      "created_at": "2018-05-30T15:59:13.341Z",
      "votes": 0,
      "article_img_url": "https://images.com/seafood.jpg"
    }
  }
   },
   "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for the given article_id, sorted by created_at descending",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "body": "Great article!",
          "votes": 10,
          "author": "grumpy19",
          "created_at": "2020-06-01T12:00:00.000Z",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to the given article_id",
    "exampleRequest": {
      "username": "butter_bridge",
      "body": "testing the comment data insertion"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 301,
        "body": "testing the comment data insertion",
        "votes": 0,
        "author": "butter_bridge",
        "article_id": 1,
        "created_at": "2024-05-01T10:00:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote count of an article by article_id",
    "exampleRequest": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text content here...",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 101,
        "article_img_url": "https://images.com/seafood.jpg"
      }
    }
  }
}
